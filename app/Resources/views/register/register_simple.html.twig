{% extends 'base.html.twig' %}

{% block body %}
{% include 'header.html.twig' %}

<section id="slide-1" class="homeSlide">
    <div class="row" style="margin: 0px !important; height: 100%;">
        <div class="col-sm-12" style="overflow: hidden; padding: 0px; height: 100%;">
            <div class="headerimage" style=" height: 100%; background-size: cover; background-image: url('{{ asset('/bundles/sit/images/IMG_8941.jpg') }}'); width: 100%; background-repeat: no-repeat; background-attachment: fixed; background-position: center;"
                 data-center="background-position: 50% 85%;"
                 data-top-bottom="background-position: 50% 185%;"
                 data-anchor-target="#slide-1">

                <div style=" height: 100%; background-color: rgba(28,28,28, 0.8); width: 100%; display: flex; align-items: center; margin-top: 20px;">
                    <h1>{% block title %}{% endblock %}</h1>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="slide-2">
    <div class="container" style="max-width: 1000px;">
        {% block content %}{% endblock %}
    </div>
</section>

{% include 'footer.html.twig' %}

{% endblock %}

{% block javascripts_head %}
    <script src="{{ asset('/bundles/sit/js/jquery.min.js') }}"></script>
    <script src="{{ asset('/bundles/sit/js/bootstrap.min.js') }}"></script>

    <script src="{{ asset('/bundles/sit/js/skrollr.min.js') }}"></script>
{% endblock %}

{% block stylesheets %}
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="{{ asset('/bundles/sit/css/bootstrap.css') }}">
    <link rel="stylesheet" href="{{ asset('/bundles/sit/css/default.css') }}">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">
<style>
    .homeSlide{
        height: 400px;
    }

    input[type="checkbox"] {
        width: auto !important;
        top: 2px;
        position: relative;
        margin: 0px 2px 0px 0px !important;
        padding: 0px;
    }

    h1{
        text-transform: uppercase;
        text-align: center;
        color: #efefef;
        width:100%;
        font-size: 32px;
    }

    #slide-2 h2{
        margin-bottom: 5px;
        font-size: 14px;
        text-transform: uppercase;
        margin-bottom: 30px;
        font-weight: 600;
    }

    #slide-2 ul{
        list-style: none;
        font-weight: 600;
    }

    #slide-2 .container{
        padding: 50px 0px 150px 0px;
    }

    #slide-2 .container .col-sm-6:first-of-type{
        padding-right: 30px;
    }

    #slide-2 .container .col-sm-6:last-of-type{
        padding-left: 30px;
    }

    .number {
        width: 25px;
        display: inline-block;
        font-size: 20px;
        margin-right: 6px;
        text-align: center;
    }

    #slide-2 .container .col-sm-6 legend:first-of-type{
        margin-top: 30px;
    }

    legend {
        margin-top: 60px;
        font-size: 20px;
        text-transform: uppercase;
    }

    label{
        width: 100%;
        font-weight: 400;
        letter-spacing: 1.2px;
    }

    #slide-2 .container input, #slide-2 .container select, #slide-2 .container button{
        width: 100%;
        margin-bottom: 10px;
        padding: 8px 16px;
        background-color: #f1f1f1;
        border: 1px solid transparent;
    }

    #slide-2 .container input:focus, #slide-2 .container select:focus, #slide-2 .container button:focus {
        outline:none;
        border: 1px solid #999;
    }

    #slide-2 .container button{
        margin-top: 60px;
        border-color: #4c6a9e;
        background-color: white;
        color: #4c6a9e;
        font-weight: 600;
        text-transform: uppercase;
    }

    #form_geboortedatum select{
        width: calc(32.666% - 4px) !important;
        margin-right: 1%
    }

    #form_geboortedatum select:last-of-type{
        margin-right: 1px !important;
    }

    @media (max-width: 992px) {
        /* Nothing on this page */
    }
    @media (max-width: 768px) {
        legend:first-of-type{
            margin-top: 30px !important;
        }

        .homeSlide{
            height: 400px;
        }

        #slide-2 .container{
            padding-top: 10px;
        }

        #slide-2 .row{
            margin: 0px;
        }

        #slide-2 .container .col-sm-6:first-of-type{
            padding-right: 15px;
        }

        #slide-2 .container .col-sm-6:last-of-type{
            padding-left: 15px;
        }
    }
</style>
{% endblock %}

{% block javascripts %}
    <script>
        $(function () {
            $( ".fullscreenMaxHeight" ).css('max-height', $( window ).height());
            $( ".fullscreenHeight" ).css('height', $( window ).height());

            // initialize skrollr if the window width is large enough
            if ($(window).width() > 992) {
                skrollr.init({smoothScrolling: false, forceHeight: false});
            }
        });
    </script>
{% endblock %}
